---
export interface Props {
	title: string;
	author: string;
	publishDate: string;
	heroImage: string;
	alt: string;
}

const { title } = Astro.props;
---

<div class="layout">
	<article>
		<div>
			<header class="mb-8">
				<h1>{title}</h1>
			</header>
			<main>
				<slot />
			</main>
		</div>
	</article>
</div>